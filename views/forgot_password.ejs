<% include common/header %>
    <div class="page-header">
      <h1>Forgot Password</h1>
    </div>
    <p class="lead">
        Enter your email below to receive your <%- mega_event %> ID and password in your email.
    </p>
    <div class="row-fluid">
        <div class="col-md-6 col-md-offset-3">
          <form action="/forgot_password" method="post" role="form">
          <div class="form-group">
              <label for="email" class="col-sm-2 control-label">Email </label>
              <div class="col-md-10">
                <input type="text" class="form-control" id="email" name="email" placeholder="Your Email">
                <p class="help-block">Your <%- mega_event %> ID and new password will be sent to this email address.</p>
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-send"></span> Reset Password</button>
              </div>
            </div>
          </form>
        </div>
    </div>
<% include common/footer %>