<% include common/header %>
    <div class="page-header" style="margin-top: 20px;">
      <h1>Welcome to <%- quiz_name %> - Online Treasure Hunt</h1>
    </div>
    <p class="lead">
    If you don't have username and password, click here to <a href="/register">register</a>.<br /><br />
    <strong>If your Catalyst ID is CT5094, you have to register again.</strong>
    </p>
    <div class="row-fluid">
        <div class="col-md-6 col-md-offset-3">
          <form class="form-signin" action="/login" method="post" role="form">
            <h2 class="form-signin-heading"><%- quiz_name %> Login</h2>
            <input type="text" name="user_id" class="form-control" placeholder="<%- mega_event %> ID" required autofocus>
            <input type="password" name="password" class="form-control" placeholder="Password" required>
            <button class="btn btn-lg btn-primary btn-block" type="submit"><span class="glyphicon glyphicon-log-in"></span> Sign in</button>
          </form>
        </div>
    </div>
    <div class="row-fluid">
        <div class="col-md-12">
            <h3>If you have problems signing in, contact Kapeel - 09665884383</h3>
        </div>
    </div>
<% include common/footer %>
