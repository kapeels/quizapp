<% include common/header %>
<div class="row-fluid">
    <div class="col-md-12">
        <h3><span class="glyphicon glyphicon-list-alt"></span> Scoreboard</h3>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="alert alert-success">
            In case of tie, best time is considered.
        </div>
    </div>
</div>
<div class="row-fluid">
    <div class="col-md-12">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th style="width:10%;"><span class="glyphicon glyphicon-hand-up"></span> Rank</th>
                    <th style="width:20%;"><span class="glyphicon glyphicon-user"></span> <%- mega_event %> ID</th>
                    <th style="width:35%;"><span class="glyphicon glyphicon-star-empty"></span> College</th>
                    <th style="width:10%;"><span class="glyphicon glyphicon-dashboard"></span> Score</th>
                    <th style="width:25;"><span class="glyphicon glyphicon-time"></span> Submission In</th>
                </tr>
            </thead>
            <tbody>
                <%
                for( var i = 0; i < users.length; i++ ) {
                    %>
                     <tr>
                        <td><%- i+1 %></td>
                        <td><%- users[ i ].user_id %></td>
                        <td><%- users[ i ].college %></td>
                        <td><%- users[ i ].score %></td>
                        <td><%- users[ i ].last_change_in %></td>
                    </tr>
                    <%
                }
                %>
            </tbody>
        </table>
    </div>
</div>
<% include common/footer %>
